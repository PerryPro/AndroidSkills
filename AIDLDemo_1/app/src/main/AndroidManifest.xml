<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="test1.aidl.com.zhixin.roav.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".ServiceDemo1"
            android:exported="true">
            <intent-filter>
                <action android:name="com.zhixin.show" />
            </intent-filter>
        </service>
        <service
            android:name=".ServiceDemo2"
            android:exported="true">
            <intent-filter>
                <action android:name="com.zhixin.show2" />
            </intent-filter>
        </service>
        <service
            android:name=".ServiceDemo3"
            android:exported="true">
            <intent-filter>
                <action android:name="com.zhixin.show3" />
            </intent-filter>
        </service>
    </application>

</manifest>